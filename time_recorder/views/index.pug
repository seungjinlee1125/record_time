doctype html
html
  head
    link(href='http://fonts.googleapis.com/css?family=Lato:400,700,900', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/javascripts/timer.js')

  body
    div.main-box
      time
        div.clock
          div(class="dial-container dial-container--hh js-clock" data-cur="9" data-start="0" data-end="12" data-dur="hh")
          div(class="dial-container dial-container--mm js-clock" data-cur="2" data-start="0" data-end="5" data-dur="mm")
          div(class="dial-container dial-container--m js-clock" data-cur="3" data-start="0" data-end="9" data-dur="m")
          div(class="dial-container dial-container--ss js-clock" data-cur="4" data-start="0" data-end="5" data-dur="ss")
          div(class="dial-container dial-container--s js-clock" data-cur="8" data-start="0" data-end="9" data-dur="s")

      p Record time to save time!
      form(method='post', action='/add_process')
        div.form-group
          label(for='name', class='name')
            input(type='text', id='content', placeholder= " ", name='content')
            span.label
              text Content
            span.border
        input(class='submit', type='submit')


